@model IEnumerable<Task.Models.Department>

@{
    ViewBag.Title = "DepartmentIndex";
}

<h2>Department Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-primary"})
</p>
<p>
    @using (Html.BeginForm("DepartmentIndex", "Department", FormMethod.Get))
    {
        <div class="form-group">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Search by Name" })


        </div>
  
       <button type="submit" class="btn btn-primary">Search</button>
    }

    
</p>
<p>
    @using (Html.BeginForm("DepartmentIndex", "Department", FormMethod.Get))
    {
        <div class="form-group">
            @Html.DropDownList("filterId", ViewBag.DepartmentIdList as SelectList, "Filter by departments ID", new { @class = "form-control" })

        </div>

        <button type="submit" class="btn btn-primary">Filter</button>
        @Html.ActionLink("Clear Filter", "DepartmentIndex", null, new { @class = "btn btn-secondary" })
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employees)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employees)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Department_Id }, new {@class="btn btn-dark"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Department_Id }, new {@class="btn btn-success"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Department_Id }, new {@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
